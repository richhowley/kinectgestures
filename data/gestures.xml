<?xml version="1.0" encoding="utf-8"?>
<gestures>
  <gesture id="Swipe Left">
    <repeat>1</repeat>
    <segments>
      <segment>
        <condition>
          <rel>RIGHT_OF</rel>
          <joints>
            <joint>RIGHT_WRIST</joint>
            <joint>RIGHT_HIP</joint>
          </joints>
        </condition>
        <condition>
          <rel>BELOW</rel>
          <joints>
            <joint>RIGHT_WRIST</joint>
            <joint>RIGHT_SHOULDER</joint>
          </joints>
        </condition>
        <condition>
          <rel>ABOVE</rel>
          <joints>
            <joint>RIGHT_WRIST</joint>
            <joint>SPINE_MID</joint>
          </joints>
        </condition>      
      </segment>
      <segment>
        <condition>
          <rel>LEFT_OF</rel>
          <joints>
            <joint>RIGHT_WRIST</joint>
            <joint>RIGHT_SHOULDER</joint>
          </joints>
        </condition>
        <condition>
          <rel>BELOW</rel>
          <joints>
            <joint>RIGHT_WRIST</joint>
            <joint>RIGHT_SHOULDER</joint>
          </joints>
        </condition>
        <condition>
          <rel>ABOVE</rel>
          <joints>
            <joint>RIGHT_WRIST</joint>
            <joint>SPINE_MID</joint>
          </joints>
        </condition>        
      </segment>       
    </segments>
  </gesture>
  <gesture id="Swipe Right">
    <repeat>1</repeat>
    <segments>
      <segment>
        <condition>
          <rel>LEFT_OF</rel>
          <joints>
            <joint>RIGHT_WRIST</joint>
            <joint>RIGHT_HIP</joint>
          </joints>
        </condition>
        <condition>
          <rel>BELOW</rel>
          <joints>
            <joint>RIGHT_WRIST</joint>
            <joint>RIGHT_SHOULDER</joint>
          </joints>
        </condition>
        <condition>
          <rel>ABOVE</rel>
          <joints>
            <joint>RIGHT_WRIST</joint>
            <joint>SPINE_MID</joint>
          </joints>
        </condition>
      </segment>
      <segment>
        <condition>
          <rel>RIGHT_OF</rel>
          <joints>
            <joint>RIGHT_WRIST</joint>
            <joint>RIGHT_SHOULDER</joint>
          </joints>
        </condition>
        <condition>
          <rel>BELOW</rel>
          <joints>
            <joint>RIGHT_WRIST</joint>
            <joint>RIGHT_SHOULDER</joint>
          </joints>
        </condition>
        <condition>
          <rel>ABOVE</rel>
          <joints>
            <joint>RIGHT_WRIST</joint>
            <joint>SPINE_MID</joint>
          </joints>
        </condition>       
      </segment>
    </segments>
  </gesture>
  <gesture id="Raise Left Hand">
    <repeat>1</repeat>
    <segments>
      <segment>
        <condition>
          <rel>BELOW</rel>
          <joints>
            <joint>LEFT_HAND</joint>
            <joint>LEFT_SHOULDER</joint>
          </joints>
        </condition>
      </segment>
      <segment>
        <condition>
          <rel>ABOVE</rel>
          <joints>
            <joint>LEFT_HAND</joint>
            <joint>LEFT_SHOULDER</joint>
          </joints>
        </condition>
      </segment>
    </segments>
  </gesture>
</gestures>
